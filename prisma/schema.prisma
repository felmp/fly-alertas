generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Alerts {
  id                 String    @id @default(auto()) @map("_id") @db.ObjectId
  original_message   String?
  affiliates_program String?
  trip               String?
  route              String?
  miles              String?
  amount             String?
  type_trip          String?
  airlines           String?
  remaining          String?
  sent               String
  sent_date          DateTime?
  created_at         DateTime? @default(now())

  @@map("alerts")
}
